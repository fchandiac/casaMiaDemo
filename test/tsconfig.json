{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework"],
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"]
}
